
@{
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

@model Inventory_Management.Models.User

<div class="row w-100 mx-0">
    <div class="col-lg-4 mx-auto">
        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
            <div class="brand-logo">
                <img src="~/Content/assets/images/logo-lg.png" alt="logo">
            </div>
            <h4>Hello! let's get started</h4>
            <h6 class="fw-light">Sign in to continue.</h6>
            @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control form-control-lg", @placeholder = "Username" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg", @value = "12345678" })
                    @if (ViewBag.Error != "")
                    {
                        <p class="text-danger">@ViewBag.Error</p>
                    }
                </div>
                <div class="mt-3 d-grid gap-2">
                    <button class="btn btn-block btn-primary btn-lg fw-medium auth-form-btn">
                        SIGN IN
                    </button>
                </div>
                <div class="my-2 d-flex justify-content-between align-items-center">
                    <div class="form-check">
                        <label class="form-check-label text-muted">
                            <input type="checkbox" class="form-check-input"> Keep me signed in
                        </label>
                    </div>
                    <a href="#" class="auth-link text-black">Forgot password?</a>
                </div>
                <div class="text-center mt-4 fw-light">
                    Don't have an account? <a href="#" class="text-primary">Create</a>
                </div>

            }
        </div>
    </div>
</div>